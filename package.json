{
  "name": "nodejs-express-typescript-api-crud",
  "version": "1.0.0",
  "description": "nodejs express typescript api - crud",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "husky:prepare": "husky install",
    "prestart": "npm run build",
    "start": "npm run serve",
    "serve": "node ./dist/index.js",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovicon/nodejs-express-typescript-api-crud.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jovicon/nodejs-express-typescript-api-crud/issues"
  },
  "homepage": "https://github.com/jovicon/nodejs-express-typescript-api-crud#readme",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dompurify": "^2.2.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/helmet": "^4.0.0",
    "@types/jsdom": "^16.2.10",
    "@types/mongodb": "^3.6.13",
    "@types/node": "^15.3.0",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-plugin-jsdoc": "^34.7.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@fimbul/bifrost": "^0.21.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^5.2.1"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "dompurify": "^2.2.8",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-list-endpoints": "^5.0.0",
    "helmet": "^4.6.0",
    "jsdom": "^16.5.3",
    "moment": "^2.29.1",
    "mongodb": "^3.6.7",
    "uuid": "^8.3.2",
    "validator": "^13.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write && npm run lint"
    }
  }
}
